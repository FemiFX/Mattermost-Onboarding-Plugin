{
  "id": "com.akinlosotutech.onboardinghelper",
  "name": "Onboarding Assistant",
  "description": "Guided, personalized onboarding workflow for new users.",
  "version": "0.1.1",
  "min_server_version": "9.0.0",
  "server": {
    "executable": "server/dist/plugin-linux-amd64"
  },
  "settings_schema": {
    "settings": [
      {
        "key": "Language",
        "display_name": "Bot Language / Bot-Sprache",
        "type": "dropdown",
        "help_text": "Language for onboarding messages / Sprache f√ºr Onboarding-Nachrichten",
        "default": "de",
        "options": [
          {
            "display_name": "Deutsch",
            "value": "de"
          },
          {
            "display_name": "English",
            "value": "en"
          }
        ]
      },
      {
        "key": "WelcomeChannel",
        "display_name": "Welcome Channel",
        "type": "text",
        "help_text": "Optional: public channel to post a welcome message (e.g. town-square).",
        "default": "town-square"
      }
    ]
  }
}
